<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mirkowu.lib_photo.view.SquaredImageView
        android:id="@+id/ivThumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ivp_default_image" />

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10000000"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/flSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ivp_number_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flGif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:background="@drawable/ivp_bottom_shape"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ivp_gif_bg"
            android:paddingHorizontal="3dp"
            android:paddingVertical="1dp"
            android:text="GIF"
            android:textColor="#D0000000"
            android:textSize="9sp" />
    </FrameLayout>

</FrameLayout>