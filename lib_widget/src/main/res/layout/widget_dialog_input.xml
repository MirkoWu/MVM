<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_card_bg_6dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.mirkowu.lib_widget.BoldTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#222222"
        android:textSize="15sp"
        tools:text="标题" />

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="提示" />

    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/widget_shape_edit_bg"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#666666"
        android:textSize="14sp"
        tools:hint="提示"
        tools:text="输入内容" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/widget_shape_line_ver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:divider="@drawable/widget_shape_line_ver"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tvNegative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:text="@string/widget_btn_cancel"
            android:textColor="@color/widget_color_negative"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPositive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:text="@string/widget_btn_confirm"
            android:textColor="@color/widget_color_positive"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
